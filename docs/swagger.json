                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "nome": {
                    "type": "string"
                },
                "valor": {
                    "type": "number"
                }
            }
        },
        "entity.CategoriaProduto": {
            "type": "integer",
            "enum": [
                1,
                2,
                3,
                4
            ],
            "x-enum-varnames": [
                "Lanche",
                "Bebida",
                "Sobremesa",
                "Acompanhamento"
            ]
        },
        "entity.Produto": {
            "type": "object",
            "properties": {
                "categoria": {
